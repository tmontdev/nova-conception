.page-reference
  size 100
  box-shadow 0px 0px 10px black
  no-padding()
  position relative
  .pr-bg
    @media(max-width: 768px)
      height 20vh
    size 100
    no-padding()
    height 40vh
    background-size cover
    background-position center center
  .pr-line
    size 100
    height 40px
    background-color #ededed
    font-family $font1
    a
      &:hover, &:focus
        color blue2
        text-decoration none
    .home-icon
      font-size 25px
      line-height 40px
      @media(max-width:768px)
        font-size 20px
    .pr-page, .pr-post
      line-height 40px
      text-transform uppercase
      font-weight 700
    .pr-post
      text-transform none
