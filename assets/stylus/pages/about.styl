.about
  size 100
  no-padding()
  position relative
  display block
  .about-menu
    position absolute
    top 15px
    left 0
    size 100
    z-index 899
    .about-menu-content
      size 100
      height 60px
      background-color #f5f5f5
      border solid 1px #ababab
      border-radius 40px
      .menu-item
        height 100%
        cursor pointer
        size 20
        line-height 60px
        border-radius 40px
        transition all 250ms ease-in-out
        &:not(.actived)
          border none
          opacity .65
          background-color transparent
          &:hover
            opacity 1
        span
          font-family $font1
          font-size 17px
        i
          font-size  22px
          @media(max-width: 768px)
            font-size 30px
            line-height 60px
  .about-item
    overflow hidden
    overflow-x: hidden
    size 100
    padding-top 100px
    position absolute
    top 0
    left 100vw
    transition all 500ms ease-in-out
    display none
    @media(max-width: 768px)
      padding-top 80px
    h2
      font-family $font2, sans-serif
      font-size 35px
      padding-bottom 20px
    p, li
      font-family $font1
    .about-item-bg
      z-index -1
      height 100%
      size 60
      position absolute
      left 40%
      top 0
      background-position center center
      background-size cover

  .actived
    left 0
    display initial
  .logo-square
  	size 100
  	display block
  	text-align center
  	.logo-img
  		height 105px
  		display block
  		text-align center
      vertical-align middle
  		img
  			max-width 100%
  			max-height 100%
  			margin auto
  			display block
        vertical-align middle
  		.lower
  			max-height 100px
