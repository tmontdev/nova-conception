.services
  size 100
  no-padding()
  position relative
  display block
  .services-menu
    position absolute
    top 15px
    left 0
    size 100
    z-index 899
    .services-menu-content
      size 100
      height 60px
      background-color #f5f5f5
      border solid 1px #ababab
      border-radius 40px
      .menu-item
        height 100%
        cursor pointer
        size 25
        line-height 60px
        border-radius 40px
        transition all 250ms ease-in-out
        &:not(.actived)
          border none
          opacity .65
          background-color transparent
          &:hover
            opacity 1
        span
          font-family $font1
          font-size 17px
        i
          font-size  22px
          @media(max-width: 768px)
            font-size 30px
            line-height 60px
  .service-item
    min-height 100vh
    size 100
    display block
    padding-top 80px
    
