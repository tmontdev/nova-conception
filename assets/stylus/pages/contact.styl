.contact
  .contact-presentation
    margin 2% 0
    border-bottom solid 1px $blue2
  .write-for-us
    .contact-form
      .form-field
        padding 5px
        input, textarea
          padding 5px 10px
          font-family $font1
          font-size 14px
          transition all 250ms ease-in-out
          border solid 1px $blue1
          color #1f1f1f
          &:hover, &:focus
            border 1px solid $green2
            color black
        .form-send
          background-color $green2
          color white
          border solid 1px $green2
          &:hover, &:focus
            @media(min-width: 768px)
              border-radius 10px
            box-shadow 0px 0px 3px $green2
            color white
          


// custorimzação de formulário
  .avaliable
    margin 2% 0
    h4
      padding-bottom 20px
      display block
      position relative
      &:after
        content""
        size 100
        position absolute
        top 30px
        left 0
        height 1px
        background-color black
    .col-field
      .line-query
        margin 2% 0
        a
          .circle
            border solid 1px $blue2
            transition all 250ms ease-in-out
          &:hover
            .circle
              background-color $blue2
              box-shadow 0px 0px 05 $blue2
              color white
