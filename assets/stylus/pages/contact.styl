.contact
  .contact-presentation
    margin 2% 0
    border-bottom solid 1px $blue2
  .write-for-us
    .contact-form
      .form-row
        display block
        margin-top 0
        margin-bottom 0
        padding-top 0
        padding-bottom 0
        @media(min-width: 768px)
          margin 2% 0
        p
          display none
        input, textarea
          border solid 1px black
          transition all 250ms ease-in-out
          padding 5px 15px
          font-size 14px
          max-height 100px
          display block
          font-family $font1
          @media(max-width 768px)
            margin 2% 0
            size 100
          &:hover, &:focus
            border solid 1px $blue2

      .send-button
        text-align center
        padding 0
        .send
          background none
          padding 6px 10px
          font-weight 700
          border solid 2px $blue2
          color $blue2
          transition all 250ms ease-in-out
          font-family $font1
          &:hover, &:focus
            background-color $green2
            box-shadow 0px 0px 5px $green2
            border solid 2px $green2
            color white
          @media(min-width: 768px)
            size 60
            margin 0 20%
            display block
